<p id="notice"><%= notice %></p>
<body>
  <div class="container2">
    <div class="box">
      <div class="form-inputs">
        <p>
          <strong>Name:</strong>
          <%= @cocktail.name %>
        </p>
          <strong>Description & Ingredient(s):</strong>
        <p>
        <% @cocktail.doses.each do |dose| %>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= if @cocktail.avatar.attached? %>
          <img class="user-image" src="<%= (url_for(@cocktail.avatar))%>">
          <%= end %>
        <% end %>
        </p>
      </div>
    </div>
  </div>
</body>
