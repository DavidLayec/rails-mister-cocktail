<h1>Cocktails</h1>


  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <tr>
            <div class="col-12 col-md-6 col-lg-3">
              <div class="card" style="background-image: url('https://source.unsplash.com/500x400/?cocktail')" >>
                <td><%= cocktail.name %></td>
                <td><%= link_to 'Show', cocktail %></td>
                <%= link_to "Create Cocktail", new_cocktail_path(@cocktail) %>
              </div>
            </div>
          </tr>
        </div>
      <% end %>
    </div>
  </tbody>


<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
