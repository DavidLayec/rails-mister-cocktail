
<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<body>
  <div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1589661431228-c5319d8e904f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80')">>
      <div class="box2">
        <div class="form-centre">
          <div class="form-inputs">
            <%= f.input :name %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
          <div class="input-photo">
            <%= f.file_field :avatar %><br>
          </div>
        </div>
      </div>
  </div>
</body>

<% end %>

